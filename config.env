# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CHANNEL_IDS=channel_id1,channel_id2,channel_id3
NOTIFICATION_CHANNEL_ID=your_notification_channel_id

# File Management
PLUGINS_DIR=/path/to/your/plugins/directory
ALLOWED_EXTENSIONS=.zip,.jar,.py
MAX_FILE_SIZE_MB=100

# Update Settings
UPDATE_INTERVAL=3600
CHECK_ARCHIVED_THREADS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=discord_file_updater.log

# Security
ENABLE_COMMAND_PERMISSIONS=false
ADMIN_USER_IDS=admin_user_id1,admin_user_id2

# Performance
MAX_CONCURRENT_DOWNLOADS=5
HISTORY_LIMIT=100
